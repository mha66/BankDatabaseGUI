<Window x:Class="BankDatabaseGUI.AddCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDatabaseGUI"
        mc:Ignorable="d"
        Title="AddCardWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Image Height="450" Width="800" Source="/1158647f-6de2-4616-b86a-604b0cc6589d.jpg" Stretch="UniformToFill" Margin="0,0,0,-16"/>
        <Button x:Name="InsertBtn"  Content="Insert" HorizontalAlignment="Left" Margin="364,345,0,0" VerticalAlignment="Top" Height="53" Width="122" Click="InsertBtn_Click" FontSize="16" RenderTransformOrigin="0.265,0.53"/>
        <TextBox x:Name="CardNumTxt" HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="740" Height="21" FontSize="16"/>
        <Label Content="Card Number" HorizontalAlignment="Left" Margin="30,86,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="CVVTxt" HorizontalAlignment="Left" Margin="30,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="21" FontSize="16"/>
        <Label Content="CVV/CVC" HorizontalAlignment="Left" Margin="30,158,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="AccNumCombo" HorizontalAlignment="Left" Margin="34,266,0,0" VerticalAlignment="Top" Width="344" FontSize="16" Height="32"/>
        <Label Content="Account Number" HorizontalAlignment="Left" Margin="30,232,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="PinTxt" HorizontalAlignment="Left" Margin="294,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Height="21" FontSize="16"/>
        <Label Content="Pin" HorizontalAlignment="Left" Margin="294,162,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.439,2.383"/>

    </Grid>
</Window>
