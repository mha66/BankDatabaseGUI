<Window x:Class="BankDatabaseGUI.UpdateCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDatabaseGUI"
        mc:Ignorable="d"
        Title="UpdateCardWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Image Height="450" Width="800" Source="/1158647f-6de2-4616-b86a-604b0cc6589d.jpg" Stretch="UniformToFill" Margin="0,0,0,-16"/>
        <Button x:Name="UpdateBtn"  Content="Update" HorizontalAlignment="Left" Margin="367,347,0,0" VerticalAlignment="Top" Height="53" Width="122" Click="UpdateBtn_Click" FontSize="16" RenderTransformOrigin="0.265,0.53"/>
        <TextBox x:Name="PinTxt" HorizontalAlignment="Left" Margin="38,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="29" FontSize="16"/>
        <Label Content="Pin" HorizontalAlignment="Left" Margin="34,183,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="CardNumCombo" HorizontalAlignment="Left" Margin="34,75,0,0" VerticalAlignment="Top" Width="513" FontSize="16" Height="33"/>
        <Label Content="Card Number" HorizontalAlignment="Left" Margin="30,41,0,0" VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Window>
